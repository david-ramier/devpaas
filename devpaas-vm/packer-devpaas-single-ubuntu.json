{
  "variables": {
    "atlas_username":   "",
    "atlas_token":      "ATLAS_TOKEN_HERE",
    "home":             "{{env `HOME`}}",
    "instance_name":    "mm-devpaas-single-v{{isotime \"20060102-0101\"}}",
    "image_name":       "mm-devpaas-single-v{{isotime \"20060102-0101\"}}",
    "gcp_project_id":   "name-marmac-devpaas",
    "gcp_zone":         "europe-west1-d",
    "gcp_source_image": "ubuntu-1604-xenial-v20161020",
    "ssh_username":     "devpaasadmin"
  },
  "builders": [
    {
      "type":               "googlecompute",
      "project_id":         "{{user `gcp_project_id`}}",
      "source_image":       "{{user `gcp_source_image`}}",
      "account_file":       "{{ user `home` }}/.gcloud/gcp_{{user `gcp_project_id`}}.json",
      "zone":               "{{ user `gcp_zone` }}",
      "instance_name":      "{{user `instance_name`}}",
      "image_name":         "{{user `image_name`}}",
      "image_description":  "Jenkins Server.",
      "communicator":       "ssh",
      "ssh_username":       "{{ user `ssh_username` }}"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
              "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "/install/vmlinuz<wait>",
              " auto<wait>",
              " console-setup/ask_detect=false<wait>",
              " console-setup/layoutcode=us<wait>",
              " console-setup/modelcode=pc105<wait>",
              " debian-installer=en_US<wait>",
              " fb=false<wait>",
              " initrd=/install/initrd.gz<wait>",
              " kbd-chooser/method=us<wait>",
              " keyboard-configuration/layout=USA<wait>",
              " keyboard-configuration/variant=USA<wait>",
              " locale=en_US<wait>",
              " netcfg/get_hostname=vm<wait>",
              " netcfg/get_domain=globomantics.com<wait>",
              " noapic<wait>",
              " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
              " -- <wait>",
              "<enter><wait>"
            ],
            "boot_wait": "10s",
            "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
            "iso_checksum_type":  "md5",
            "iso_checksum":       "23e97cd5d4145d4105fbf29878534049",
            "guest_os_type":      "Ubuntu_64",
            "http_directory":     "http",
            "ssh_username":       "{{ user `ssh_username` }}",
            "ssh_password":       "packer",
            "ssh_wait_timeout":   "10000s",
            "shutdown_command":   "echo 'packer' | sudo -S shutdown -P now",
            "vm_name":            "{{user `instance_name`}}",
            "vboxmanage": [
              [
                  "modifyvm",
                  "{{.Name}}",
                  "--memory",
                  "3072"
              ],
              [
                  "modifyvm",
                  "{{.Name}}",
                  "--cpus",
                  "2"
              ],
              [
                  "modifyvm",
                  "{{.Name}}",
                  "--vram",
                  "32"
              ]
            ],
      "headless": "false"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
          "scripts/virtualbox.sh",
          "scripts/vagrant.sh"
      ],
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": ["virtualbox-iso"]
    },
  	{
        "type":   "shell",
        "scripts": [
          "scripts/jenkins/create-jenkins-temp-dirs.sh",
          "scripts/nexus/create-nexus-temp-dirs.sh",
          "scripts/sonarqube/create-sonarqube-temp-dirs.sh",
          "scripts/serverspec/create-serverspec-temp-dirs.sh"
        ]
    },
	  {
      "type":         "file",
      "source":       "resources/jenkins/configs/",
      "destination":  "/tmp/jenkins/resources/"
    },
    {
      "type":         "file",
      "source":       "resources/jenkins/jobs/",
      "destination":  "/tmp/jenkins/jobs/"
    },
    {
      "type":         "file",
      "source":       "resources/jenkins/tests/",
      "destination":  "/tmp/jenkins/tests/"
    },
    {
      "type":         "file",
      "source":       "resources/nexus/configs/",
      "destination":  "/tmp/nexus/resources/"
    },
    {
      "type":         "file",
      "source":       "resources/nexus/tests/",
      "destination":  "/tmp/nexus/tests/"
    },
    {
      "type":         "file",
      "source":       "resources/sonarqube/configs/",
      "destination":  "/tmp/sonarqube/resources/"
    },
    {
      "type":         "file",
      "source":       "resources/sonarqube/tests/",
      "destination":  "/tmp/sonarqube/tests/"
    },
    {
      "type":         "file",
      "source":       "resources/serverspec/configs/",
      "destination":  "/tmp/serverspec/"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/java-jdk.sh",
        "scripts/jenkins/graphviz.sh",
        "scripts/git.sh",
        "scripts/jenkins/jenkins.sh",
        "scripts/nexus/nexus.sh",
        "scripts/sonarqube/mysql.sh",
        "scripts/sonarqube/sonarqube.sh",
        "scripts/serverspec/serverspec.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "build/mm-devpaas-single-ubuntu.tar.gz",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "vagrant",
      "output": "build/{{.Provider}}-mm-devpaas-single-ubuntu.box",
      "only": ["virtualbox-iso"]
    },
    {
			"type": "atlas",
			"artifact": "{{user `atlas_username`}}/mm-devpaas-single-ubuntu",
			"artifact_type": "vagrant.box",
			"metadata": {
				"provider": "virtualbox"
			},
			"only": ["virtualbox-iso"]
		}
  ]
}
