{
  "variables": {
	  "atlas_token":     "ATLAS_TOKEN_HERE",
    "instance_name":    "mm-jenkins-2-v{{isotime \"20060102\"}}",
    "image_name":       "mm-jenkins-2-v{{isotime \"20060102\"}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id":         "name-marmac-php-helloworld",
      "account_file":       "gcp_accountfile.json",
      "source_image":       "ubuntu-1604-xenial-v20161020",
      "zone":               "europe-west1-d",
      "instance_name":      "{{user `instance_name`}}",
      "image_name":         "{{user `image_name`}}",
      "image_description":  "Jenkins Server.",
      "communicator":       "ssh",
      "ssh_username":       "marmacAdmin"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
              "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "/install/vmlinuz<wait>",
              " auto<wait>",
              " console-setup/ask_detect=false<wait>",
              " console-setup/layoutcode=us<wait>",
              " console-setup/modelcode=pc105<wait>",
              " debian-installer=en_US<wait>",
              " fb=false<wait>",
              " initrd=/install/initrd.gz<wait>",
              " kbd-chooser/method=us<wait>",
              " keyboard-configuration/layout=USA<wait>",
              " keyboard-configuration/variant=USA<wait>",
              " locale=en_US<wait>",
              " netcfg/get_hostname=vm<wait>",
              " netcfg/get_domain=globomantics.com<wait>",
              " noapic<wait>",
              " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
              " -- <wait>",
              "<enter><wait>"
            ],
            "boot_wait": "10s",
            "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
            "iso_checksum_type":  "md5",
            "iso_checksum":       "23e97cd5d4145d4105fbf29878534049",
            "guest_os_type":      "Ubuntu_64",
            "http_directory":     "http",
            "ssh_username":       "marmacAdmin",
            "ssh_password":       "packer",
            "ssh_wait_timeout":   "10000s",
            "shutdown_command":   "echo 'packer' | sudo -S shutdown -P now",
            "vm_name":            "{{user `instance_name`}}",
            "vboxmanage": [
              [
                  "modifyvm",
                  "{{.Name}}",
                  "--memory",
                  "1024"
              ],
              [
                  "modifyvm",
                  "{{.Name}}",
                  "--cpus",
                  "1"
              ]
            ],
      "headless": "false"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
          "scripts/virtualbox.sh",
          "scripts/vagrant.sh"
      ],
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": ["virtualbox-iso"]
    },
	{
      "type":   "shell",
      "inline": [
        "echo '****** Preparing /tmp directories'",
        "mkdir /tmp/jenkins",
        "mkdir /tmp/jenkins/scripts",
        "mkdir /tmp/jenkins/resources",
        "mkdir /tmp/jenkins/jobs",
        "mkdir /tmp/jenkins/tests"
      ]
    },
	{
      "type":         "file",
      "source":       "resources/jenkins/configs/",
      "destination":  "/tmp/jenkins/resources/"
    },
    {
      "type":         "file",
      "source":       "resources/jenkins/tests/",
      "destination":  "/tmp/jenkins/tests/"
    },
    {
      "type": "shell",
      "scripts": [
          "scripts/java-jdk.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
          "scripts/jenkins/graphviz.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
          "scripts/git.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
          "scripts/jenkins/jenkins.sh"
      ]
    },
	{
      "type":   "shell",
      "inline": [
        "echo '****** Stop Jenkins Service'",
        "sudo service jenkins stop",

        "echo '****** Moving Jenkins Configuration files '",
        "sudo cp /tmp/jenkins/resources/etc-default-jenkins.conf        /etc/default/jenkins",
        "sudo cp /tmp/jenkins/resources/config.xml                      /var/lib/jenkins/",
		"sudo cp /tmp/jenkins/resources/hudson.tools.JDKInstaller.xml   /var/lib/jenkins/",
        "sudo cp /tmp/jenkins/resources/hudson.tasks.Ant.xml            /var/lib/jenkins/",
        "sudo cp /tmp/jenkins/resources/hudson.tasks.Maven.xml          /var/lib/jenkins/",

		"echo '****** Setting up Jenkins admin users'",
        "cd /var/lib/jenkins",
        "sudo mkdir -p users/admin",
        "sudo cp /tmp/jenkins/resources/admin-config.xml /var/lib/jenkins/users/admin/config.xml",
		"echo '****** Start Jenkins Service'",
        "sudo service jenkins start"
		]
	}
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "build/mm-jenkins.tar.gz",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "vagrant",
      "output": "build/{{.Provider}}-mm-jenkins.box",
      "only": ["virtualbox-iso"]
    },
    {
        "type": "atlas",
        "artifact": "marcomaccio/mm-jenkins",
        "artifact_type": "vagrant.box",
        "metadata": {
            "provider": "virtualbox"
        },
        "only": ["virtualbox-iso"]
    }
  ]
}
